{# templates/admin/purchase/index.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
<div class="p-6 bg-gray-900 min-h-screen text-white">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-bold tracking-tight text-white">Purchase List</h2>
        <a href="{{ path('admin_purchase_new') }}" class="bg-blue-600 hover:bg-blue-500 text-white px-4 py-2 rounded-lg transition duration-200 shadow-lg">
            + Add Purchase
        </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
        <div class="bg-gray-800 p-4 rounded-xl border border-gray-700">
            <p class="text-gray-400 text-sm">Total Orders</p>
            <p class="text-2xl font-bold text-white">{{ purchases|length }}</p>
        </div>
        <div class="bg-gray-800 p-4 rounded-xl border border-gray-700">
            <p class="text-gray-400 text-sm">Total Revenue</p>
            <p class="text-2xl font-bold text-green-400">
                {# Calculation logic depends on your entity, usually done in Controller #}
                ₹44.00 
            </p>
        </div>
    </div>

    <div class="bg-gray-800 rounded-xl shadow-xl overflow-hidden border border-gray-700">
        <table class="w-full text-left border-collapse">
            <thead>
                <tr class="bg-gray-700/50 text-gray-300 uppercase text-xs font-semibold tracking-wider">
                    <th class="px-6 py-4">Product Name</th>
                    <th class="px-6 py-4">Customer</th>
                    <th class="px-6 py-4 text-center">Unit Price</th>
                    <th class="px-6 py-4 text-center">Quantity</th>
                    <th class="px-6 py-4 text-right">Total Amount</th>
                    <th class="px-6 py-4"></th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-700">
                {% for purchase in purchases %}
                <tr class="hover:bg-gray-700/30 transition-colors duration-150">
                    <td class="px-6 py-4 font-medium text-white">{{ purchase.productName }}</td>
                    <td class="px-6 py-4">
                        <span class="text-blue-400 hover:underline cursor-pointer">
                            {{ purchase.customer }}
                        </span>
                    </td>
                    <td class="px-6 py-4 text-center text-gray-300">₹{{ purchase.unitPrice }}</td>
                    <td class="px-6 py-4 text-center">
                        <span class="bg-gray-900 text-blue-300 px-3 py-1 rounded-full text-xs font-bold border border-blue-500/30">
                            {{ purchase.quantity }}
                        </span>
                    </td>
                    <td class="px-6 py-4 text-right font-bold text-green-400">
                        ₹{{ purchase.totalAmount }}
                    </td>
                    <td class="px-6 py-4 text-right">
                        <div class="flex justify-end gap-2">
                            <a href="{{ path('admin_purchase_edit', {'id': purchase.id}) }}" class="text-gray-400 hover:text-white">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path></svg>
                            </a>
                        </div>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="6" class="px-6 py-10 text-center text-gray-500">No purchases found.</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}