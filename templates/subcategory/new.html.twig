{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h4 class="mb-0">Subcategory Form</h4>
                </div>
                <div class="card-body p-4">
                    {{ form_start(form) }}
                        <div class="mb-4">
                            {{ form_label(form, 'Enter Name', {'label_attr': {'class': 'form-label font-weight-bold'}}) }}
                            {{ form_widget(form, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'e.g. Mens Wear'}}) }}
                        </div>
                        <button class="btn btn-primary btn-lg w-100 shadow-sm">Save Changes</button>
                    {{ form_end(form) }}
                    <div class="mt-4 text-center">
                        <a href="{{ path('app_subcategory_index') }}" class="text-decoration-none text-muted">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}