<div class="mb-3">
    <label class="form-label fw-bold">Select Products/Variants</label>
    <select name="variant_ids[]" class="form-control select2-multiple" multiple="multiple" required>
    {% for product in products %}
        <optgroup label="{{ product.name }}">
            {% for variant in product.attributeValues %}
                <option value="{{ variant.id }}">
                    {{ product.name }} ({{ variant.value }}) - Stock: {{ product.stock }}
                </option>
            {% endfor %}
        </optgroup>
    {% endfor %}
</select>
</div>