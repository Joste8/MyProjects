{# templates/customer/history.html.twig #}

{% extends ea is not null ? '@EasyAdmin/page/content.html.twig' : 'base.html.twig' %}

{% block content_title %}
    Purchase History: <strong>{{ customer.name }}</strong>
{% endblock %}

{% block page_actions %}
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addPurchaseModal">
        <i class="fas fa-plus"></i> Add Purchase
    </button>
{% endblock %}

{% block main %}
    <div class="datagrid">
        <table class="table datagrid">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Price (Total)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% set grandTotal = 0 %}
                {% for purchase in purchases %}
                    <tr>
                        <td>
                            <strong>{{ purchase.itemName }}</strong><br>
                            <small class="text-muted">({{ purchase.productVariant }})</small>
                        </td>
                        <td>{{ purchase.quantity }}</td>
                        <td>₹{{ purchase.totalPrice|number_format(2) }}</td>
                        <td class="text-center">
                            <form method="post" action="{{ path('app_purchase_delete', {'id': purchase.id}) }}" onsubmit="return confirm('Are you sure?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ purchase.id) }}">
                                <button type="submit" class="btn btn-link text-danger p-0">Delete</button>
                            </form>
                        </td>
                    </tr>
                    {% set grandTotal = grandTotal + purchase.totalPrice %}
                {% else %}
                    <tr><td colspan="4" class="text-center py-4 text-muted">No history found.</td></tr>
                {% endfor %}
            </tbody>
            {% if purchases is not empty %}
            <tfoot>
                <tr class="fw-bold">
                    <td colspan="2" class="text-end">Grand Total:</td>
                    <td colspan="2">₹{{ grandTotal|number_format(2) }}</td>
                </tr>
            </tfoot>
            {% endif %}
        </table>
    </div>

    {# Add Purchase Modal #}
    <div class="modal fade" id="addPurchaseModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="{{ path('app_customer_purchase_new', {'id': customer.id}) }}" method="POST">
                    <div class="modal-header">
                        <h5 class="modal-title">New Purchase</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Product Variant</label>
                            <select name="variant_id" class="form-select" required>
                                {% for variant in variants %}
                                    <option value="{{ variant.id }}">{{ variant.product.name }} - {{ variant }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Quantity</label>
                            <input type="number" name="quantity" class="form-control" min="1" value="1" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}