<div class="card bg-secondary text-white shadow-sm border-0">
    <div class="card-header bg-dark text-white fw-bold">
        Recent Transactions Log
    </div>
    <div class="table-responsive">
        <table class="table table-dark table-hover mb-0">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Customer</th>
                    <th>Category</th> <th>Sub Category</th> <th>Product Item</th>
                    <th>Prev.</th>
                    <th>Qty</th>
                    <th>Bal.</th>
                    <th class="text-center">Action</th> 
                </tr>
            </thead>
            <tbody>
                {% for item in history %}
                <tr class="align-middle">
                    <td class="small" style="font-size: 11px;">{{ item.createdAt|date('d M Y, h:i A') }}</td>
                    <td><strong>{{ item.customerName }}</strong></td>
                    
                    {# Mapping Category and Sub Category from Product #}
                    <td><span class="badge bg-primary">{{ item.product.subCategory.category.name }}</span></td>
                    <td><span class="badge bg-info text-dark">{{ item.product.subCategory.name }}</span></td>
                    
                    <td>
                        {{ item.product.name }} 
                        <span class="badge bg-light text-dark ms-1" style="font-size: 10px;">{{ item.variant.value }}</span>
                    </td>
                    <td>{{ item.previousStock }}</td>
                    <td><span class="badge bg-danger">{{ item.quantity }}</span></td>
                    <td class="text-success fw-bold">{{ item.previousStock - item.quantity }}</td>
                    <td class="text-center">
                        <a href="{{ path('admin_purchase_receipt', {'id': item.id}) }}" 
                           class="btn btn-sm btn-primary" 
                           target="_blank"
                           style="font-size: 11px; padding: 2px 8px;">
                            <i class="fas fa-print"></i> Receipt
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>