{# templates/admin/fields/variant_badges.html.twig #}
{% for variant in field.value %}
    <span class="badge" style="background-color: #2c3e50; color: white; padding: 5px 10px; border-radius: 4px; margin-right: 5px; font-size: 0.75rem; display: inline-block; margin-bottom: 5px; border-left: 4px solid #3498db;">
        <span style="text-transform: uppercase; font-weight: bold;">{{ variant.color }}</span> 
        <span style="margin: 0 4px; opacity: 0.5;">|</span>
        <span>{{ variant.size }}</span>
        <span style="background: rgba(255,255,255,0.2); margin-left: 6px; padding: 1px 5px; border-radius: 3px;">
            Qty: {{ variant.stock }}
        </span>
    </span>
{% else %}
    <span class="text-muted" style="font-style: italic;">No variants added</span>
{% endfor %}