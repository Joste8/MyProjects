{# templates/admin/fields/variant_badges.html.twig #}

{% for val in field.value %}
    <div style="display: inline-flex; margin-bottom: 5px; margin-right: 5px; font-family: sans-serif;">
        <span style="background: #d9534f; color: white; padding: 2px 8px; border-radius: 4px 0 0 4px; font-weight: bold; font-size: 11px;">
            {{ val.value|upper }} 
        </span>
        <span style="background: #2980b9; color: white; padding: 2px 8px; border-radius: 0 4px 4px 0; font-size: 11px; border-left: 1px solid rgba(255,255,255,0.2);">
            Qty: {{ val.stock }}
        </span>
    </div>
{% else %}
    <span class="text-muted" style="font-size: 12px;">No variants added</span>
{% endfor %}