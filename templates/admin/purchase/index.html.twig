{# templates/admin/purchase/index.html.twig #}

<div style="background-color: #0d1117; min-height: 100vh; color: #c9d1d9; padding: 25px; font-family: sans-serif;">
    
    {# Flash Messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div style="padding: 15px; margin-bottom: 20px; border-radius: 6px; background: {% if label == 'success' %}#238636{% else %}#da3633{% endif %}; color: white; font-weight: bold;">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px;">
        <div>
            <h2 style="color: white; margin: 0; font-weight: bold; letter-spacing: 1px;">RECENT TRANSACTIONS LOG</h2>
            <p style="color: #8b949e; margin-top: 5px; font-size: 0.9rem;">Track all customer purchases and stock movements.</p>
        </div>
        <button onclick="toggleModal()" style="background-color: #238636; color: white; padding: 10px 20px; border-radius: 6px; border:none; cursor:pointer; font-weight: bold; font-size: 0.85rem;">+ NEW TRANSACTION</button>
    </div>

    {# --- Purchase Modal --- #}
    <div id="purchaseModal" style="display:none; position: fixed; z-index: 1000; left: 0; top: 0; width: 100%; height: 100%; background-color: rgba(0,0,0,0.8);">
        <div style="background-color: #161b22; margin: 10% auto; padding: 30px; border: 1px solid #30363d; width: 400px; border-radius: 12px; box-shadow: 0 10px 40px rgba(0,0,0,0.5);">
            <h3 style="color: white; margin-top: 0;">Record New Sale</h3>
            <form action="{{ path('admin_purchase_process') }}" method="POST">
                <div style="margin-bottom: 15px;">
                    <label style="display: block; color: #8b949e; margin-bottom: 5px;">Customer Name</label>
                    <input type="text" name="customer_name" placeholder="Enter name" required style="width: 100%; padding: 10px; background: #0d1117; border: 1px solid #30363d; color: white; border-radius: 6px;">
                </div>

                <div style="margin-bottom: 15px;">
                    <label style="display: block; color: #8b949e; margin-bottom: 5px;">Select Product & Size</label>
                    <select name="variant_id" required style="width: 100%; padding: 10px; background: #0d1117; border: 1px solid #30363d; color: white; border-radius: 6px;">
                        {% for variant in variants %}
                            <option value="{{ variant.id }}">{{ variant.product.name }} - {{ variant.value }} (Stock: {{ variant.stock }})</option>
                        {% endfor %}
                    </select>
                </div>

                <div style="margin-bottom: 20px;">
                    <label style="display: block; color: #8b949e; margin-bottom: 5px;">Quantity</label>
                    <input type="number" name="quantity" min="1" value="1" required style="width: 100%; padding: 10px; background: #0d1117; border: 1px solid #30363d; color: white; border-radius: 6px;">
                </div>

                <div style="display: flex; gap: 10px;">
                    <button type="submit" style="flex: 1; background: #238636; color: white; border: none; padding: 12px; border-radius: 6px; cursor: pointer; font-weight: bold;">SUBMIT</button>
                    <button type="button" onclick="toggleModal()" style="flex: 1; background: #30363d; color: white; border: none; padding: 12px; border-radius: 6px; cursor: pointer; font-weight: bold;">CANCEL</button>
                </div>
            </form>
        </div>
    </div>

    {# Transaction Table #}
    <div style="background-color: #161b22; border-radius: 12px; border: 1px solid #30363d; overflow: hidden;">
        <table style="width: 100%; border-collapse: collapse; text-align: left;">
            <thead>
                <tr style="background-color: #21262d; border-bottom: 2px solid #30363d;">
                    <th style="padding: 18px; color: #ffffff; font-size: 0.8rem; text-transform: uppercase;">Date</th>
                    <th style="padding: 18px; color: #ffffff; font-size: 0.8rem; text-transform: uppercase;">Customer</th>
                    <th style="padding: 18px; color: #ffffff; font-size: 0.8rem; text-transform: uppercase;">Product Detail</th>
                    <th style="padding: 18px; color: #ffffff; font-size: 0.8rem; text-transform: uppercase; text-align: center;">Qty</th>
                    <th style="padding: 18px; color: #ffffff; font-size: 0.8rem; text-transform: uppercase; text-align: center;">Stock Bal</th>
                    <th style="padding: 18px; color: #ffffff; font-size: 0.8rem; text-transform: uppercase; text-align: center;">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for log in history %}
                <tr style="border-bottom: 1px solid #21262d;">
                    <td style="padding: 18px; color: #8b949e; font-size: 0.85rem;">{{ log.purchasedAt|date('d M Y, h:i A') }}</td>
                    <td style="padding: 18px; color: #ffffff; font-weight: bold;">{{ log.customerName|default('Walking Customer') }}</td>
                    <td style="padding: 18px;">
                        <div style="color: #ffffff; font-size: 0.95rem;">{{ log.itemName }}</div>
                        {% if log.productVariant %}
                            <div style="color: #5ba6ff; font-size: 0.75rem; font-weight: bold;">VARIANT: {{ log.productVariant.value }}</div>
                        {% endif %}
                    </td>
                    <td style="padding: 18px; text-align: center;">
                        <span style="background: rgba(248, 81, 73, 0.1); color: #ff7b72; padding: 4px 10px; border-radius: 20px; font-weight: bold;">-{{ log.quantity }}</span>
                    </td>
                    <td style="padding: 18px; text-align: center; color: #3fb950; font-weight: bold;">
                        {{ log.productVariant.stock|default(0) }}
                    </td>
                    <td style="padding: 18px; text-align: center;">
                        <a href="{{ path('admin_purchase_receipt', {'id': log.id}) }}" style="color: #58a6ff; text-decoration: none; border: 1px solid #30363d; padding: 5px 12px; border-radius: 6px; font-size: 0.8rem;">VIEW RECEIPT</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<script>
function toggleModal() {
    const modal = document.getElementById('purchaseModal');
    modal.style.display = (modal.style.display === 'none' || modal.style.display === '') ? 'block' : 'none';
}
</script>