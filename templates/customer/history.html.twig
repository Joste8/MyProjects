{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary d-flex justify-content-between align-items-center py-3">
            <h4 class="mb-0 text-white">Purchase History: {{ customer.name }}</h4>
            <div>
                {# Edit Customer Button - ഇപ്പോൾ പേജിന്റെ മുകളിൽ കൃത്യമായി കാണാം #}
                <a href="{{ path('app_customer_edit', {'id': customer.id}) }}" class="btn btn-warning btn-sm fw-bold me-2">
                    <i class="fas fa-edit"></i> Edit Customer
                </a>
                
                <button type="button" class="btn btn-light btn-sm fw-bold" data-bs-toggle="modal" data-bs-target="#addPurchaseModal">
                    + Add Purchase
                </button>
            </div>
        </div>
        
        <div class="card-body p-0">
            <table class="table table-dark table-hover mb-0">
                <thead class="table-secondary text-dark">
                    <tr>
                        <th class="ps-3">Product Name</th>
                        <th>Quantity</th>
                        <th>Price (Total)</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% set grandTotal = 0 %} 

                    {% for purchase in purchases %}
                        <tr>
                            <td class="ps-3">
                                {{ purchase.itemName }}<br>
                                <small class="text-muted">({{ purchase.productVariant }})</small>
                            </td>
                            <td>{{ purchase.quantity }}</td>
                            <td>₹{{ purchase.totalPrice|number_format(2) }}</td>
                            <td class="text-center">
                                {# Delete Form #}
                                <form method="post" action="{{ path('app_purchase_delete', {'id': purchase.id}) }}" 
                                      style="display:inline-block;" 
                                      onsubmit="return confirm('Are you sure you want to delete this purchase?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ purchase.id) }}">
                                    <button class="btn btn-outline-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                        {% set grandTotal = grandTotal + purchase.totalPrice %}
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center py-4 text-muted">No history found.</td>
                        </tr>
                    {% endfor %}
                </tbody>
                {% if purchases is not empty %}
                <tfoot>
                    <tr class="table-secondary text-dark">
                        <td colspan="2" class="text-end fw-bold">Grand Total:</td>
                        <td colspan="2" class="fw-bold text-start ps-4">₹{{ grandTotal|number_format(2) }}</td>
                    </tr>
                </tfoot>
                {% endif %}
            </table>
        </div>
    </div>
</div>

{# Add Purchase Modal #}
<div class="modal fade" id="addPurchaseModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-white border-secondary">
            <div class="modal-header border-secondary">
                <h5 class="modal-title">Record New Purchase</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form action="{{ path('app_customer_purchase_new', {'id': customer.id}) }}" method="POST">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Select Product Variant</label>
                        <select name="variant_id" class="form-select bg-secondary text-white border-0" required>
                            {% if variants is defined and variants is not empty %}
                                <option value="" selected disabled>Choose a product...</option>
                                {% for variant in variants %}
                                    <option value="{{ variant.id }}">
                                        {{ variant.product.name }} ({{ variant.value }}) - ₹{{ variant.product.price }}
                                    </option>
                                {% endfor %}
                            {% endif %}
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Quantity</label>
                        <input type="number" name="quantity" class="form-control bg-secondary text-white border-0" value="1" min="1" required>
                    </div>
                </div>
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Purchase</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}