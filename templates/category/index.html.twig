{% extends 'base.html.twig' %}

{% block title %}Category List{% endblock %}

{% block body %}
    <h1>Category List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            {# Main Categories only #}
            {% if category.parent is null %}
                <tr>
                    <td><strong>{{ category.name }}</strong></td>
                    <td>
                        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-sm btn-info">Edit</a>
                    </td>
                </tr>

                {# Loop through children (subcategories) #}
                {% if category.children is not empty %}
                    {% for sub in category.children %}
                        <tr>
                            <td style="padding-left: 40px;">â†³ {{ sub.name }}</td>
                            <td>
                                <a href="{{ path('app_category_edit', {'id': sub.id}) }}" class="btn btn-sm btn-outline-secondary">Edit Sub</a>
                            </td>
                        </tr>
                    {% endfor %}
                {% endif %}
            {% endif %}
        {% else %}
            <tr>
                <td colspan="2">No categories found.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_category_new') }}" class="btn btn-primary">Create New Category</a>
{% endblock %}